{
  "manifest_version": 3,
  "name": "Word Swapper",
  "version": "1.0",
  "description": "Replace words on web pages with your chosen words",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/word-swap.png",
      "48": "images/word-swap.png",
      "128": "images/word-swap.png"
    }
  },
  "icons": {
    "16": "images/word-swap.png",
    "48": "images/word-swap.png",
    "128": "images/word-swap.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
